{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/summarize",
      "methods": ["POST"],
      "dest": "/api/summarize.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
